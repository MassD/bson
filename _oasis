Library bson
  Path:       src
  BuildTools: ocamlbuild
  Modules:    Bson,Bson_ext

Flag syntax
  Description: build the bson syntax extension
  Default: false

Library "bson.syntax"
  Build$: flag(syntax)
  Install$: flag(syntax)
  Path:       syntax
  BuildTools: ocamlbuild
  Modules:    Pa_bson
  BuildDepends : camlp4.quotations.r,camlp4.metagenerator,camlp4.extend,deriving-ocsigen,deriving-ocsigen.syntax
  XMETAType:          syntax
  XMETARequires:      camlp4

Flag client
  Description: build the client-side library
  Default: false

Library bson_client
  Build$: flag(client)
  Install$: flag(client)
  Path: client/src
  Findlibname: client
  FindlibParent: bson
  BuildTools: ocamlbuild
  Modules: Bson_ext_client
  CompiledObject:     byte
  BuildDepends: js_of_ocaml, js_of_ocaml.syntax

Library bson_client_syntax
  Build$: flag(client)
  Install$: flag(client)
  Path: client/syntax
  Findlibname: syntax
  FindlibParent: bson_client
  BuildTools: ocamlbuild
  Modules: Pa_bson_client
  BuildDepends: camlp4.quotations.r,camlp4.metagenerator,camlp4.extend,deriving-ocsigen,js_of_ocaml.deriving.syntax
  CompiledObject:     byte
  XMETAType:          syntax
  XMETARequires:      camlp4
